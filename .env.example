# MindNest Environment Configuration

# Server settings
HOST=0.0.0.0
PORT=8000

# Vector store settings
VECTORSTORE_DIR=chroma_db
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Document processing settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# LLM settings
MODEL_NAME=Wizard-Vicuna-13B-Uncensored.Q4_K_M.gguf
SMALL_MODEL_NAME=llama-2-7b.Q4_K_M.gguf
USE_SMALL_MODEL=false
TEMPERATURE=0.3
MAX_TOKENS=2000
TOP_P=0.95
CONTEXT_WINDOW=2048
BATCH_SIZE=1024

# Cache settings
CACHE_ENABLED=true
MEMORY_CACHE_SIZE=1024
DISK_CACHE_ENABLED=true
DISK_CACHE_PATH=utils/query_cache.json

# Query settings
QUERY_CLASSIFIER_MODE=embeddings  # Options: embeddings, neural, hybrid, regex
CONVERSATION_MODE=professional     # Options: professional, friendly, concise

# Logging settings
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/mindnest.log 